<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 5.3//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="entityonetomany">
    <class name="Customer">         <!--Class tag-->
        <id name="customerId">
            <generator class="increment"></generator>
        </id>
        <property name="customerName" ></property>

        <map name="orders" cascade="all"> <!--Collection tag-->
            <key column="customer_frk_id"
                 not-null="true"
                 on-delete="cascade"
                 update="true"
                 unique="false"
            />
            <index column="price" type="string"></index>
            <one-to-many class="Orders"/> <!--relation-->
        </map>
    </class>

</hibernate-mapping>